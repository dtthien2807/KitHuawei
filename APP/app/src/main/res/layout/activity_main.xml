<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:id="@+id/layoutwelcome"
    android:background="#E6E6E6">

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/coffee" />

    <TextView
        android:id="@+id/sologan"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textStyle="bold"
        android:paddingLeft="50dp"
        android:paddingTop="10dp"
        android:text="QUẢN LÝ CỬA HÀNG COFFEE AND TEA"
        android:textColor="#392D0F"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/txtHello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chào mừng bạn đã đến với cửa hàng chúng tôi~"
        android:textSize="16dp"
        android:paddingLeft="60dp"
        android:textColor="#676237"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginBottom="40dp"/>
    <!-- Define an ID for the button control. -->
    <com.huawei.hms.support.hwid.ui.HuaweiIdAuthButton
        android:id="@+id/HuaweiIdAuthButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="25dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dangky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:onClick="callSignUpFromWel"
            android:text="ĐĂNG KÝ" />

        <Button
            android:id="@+id/dangnhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="ĐĂNG NHẬP"
            android:onClick="callLoginFromWel"
            android:transitionName="transition_login"/>
    </LinearLayout>



</LinearLayout>